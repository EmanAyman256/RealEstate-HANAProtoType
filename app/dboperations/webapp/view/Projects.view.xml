<mvc:View controllerName="dboperations.controller.Projects"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:sap.m="sap.m">

    <Page id="ProjectsPage" title="Projects">
        <headerContent>
            <Button id="btnAddProject" icon="sap-icon://add" tooltip="Add" text="New Project" press="onNavigateToAddProject" />
        </headerContent>

        <Table id="projectsTable" items="{path: '/Projects'}">
            <columns>
                <Column id="_IDGenColumn1">
                    <Text id="_IDGenText" text="Project ID" />
                </Column>
               <Column id="_IDGenColumn2">
                    <Text id="_IDGenText1" text="Project Description" />
                </Column>
                <Column id="_IDGenColumn3">
                    <Text id="_IDGenText2" text="Company Code" />
                </Column>
                     <Column id="_IDGenColumn4">
                    <Text id="_IDGenText3" text="Company Code Description" />
                </Column>
                
                <Column id="_IDGenColumn5">
                    <Text id="_IDGenText4" text="From" />
                </Column>
                     <Column id="_IDGenColumn6">
                    <Text id="_IDGenText5" text="To" />
                </Column>
                <Column id="_IDGenColumn7">
                    <Text id="_IDGenText6" text="Location" />
                </Column>
                <Column id="_IDGenColumn8">
                    <Text id="_IDGenText7" text="Business Area" />
                </Column>
                     <Column id="_IDGenColumn9">
                    <Text id="_IDGenText8" text="Profit Center" />
                </Column>
                <Column id="_IDGenColumn10">
                    <Text id="_IDGenText9" text="Functional Area" />
                </Column>
                <Column id="_IDGenColumn11">
                    <Text id="_IDGenText10" text="Company Code" />
                </Column>
                <Column id="_IDGenColumn12">
                    <Text id="_IDGenText11" text="Actions" />
                </Column>
            </columns>
            <items>
                <ColumnListItem id="_IDGenColumnListItem">
                    <cells>
                        <Text id="_IDGenText12" text="{projectId}" />
                        <Text id="_IDGenText13" text="{projectDescription}" />
                        <Text id="_IDGenText14" text="{companyCodeId}" />
                          <Text id="_IDGenText15" text="{companyCodeDescription}" />
                        <Text id="_IDGenText16" text="{validFrom}" />
                        <Text id="_IDGenText17" text="{validTo}" />
                          <Text id="_IDGenText18" text="{location}" />
                        <Text id="_IDGenText19" text="{businessArea}" />
                        <Text id="_IDGenText20" text="{profitCenter}" />
                          <Text id="_IDGenText21" text="{functionalArea}" />
                        <Text id="_IDGenText22" text="{supplementaryText}" />
                        <HBox id="_IDGenHBox">
                            <Button id="_IDGenButton" icon="sap-icon://information" press="onDetails" />
                            <Button icon="sap-icon://edit" press="onEditProject" />
                            <Button id="_IDGenButton1" icon="sap-icon://delete" press="onDelete" type="Reject" />
                        </HBox>
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
    </Page>
</mvc:View>
