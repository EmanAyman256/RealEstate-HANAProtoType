<mvc:View
    controllerName="dboperations.controller.Projects"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
>
    <Page
        id="ProjectsPage"
        title="Projects"
    >
        <headerContent>
            <Button
                id="btnAddProject"
                icon="sap-icon://add"
                tooltip="Add"
                text="New Project"
                press="onNavigateToAddProject"
            />
        </headerContent>

        <content>
            <Table
                id="projectsTable"
                items="{ path: '/Projects' }"
                class="sapUiResponsiveContentPadding"
            >
                <columns>
                    <Column><Text text="Project ID" /></Column>
                    <Column><Text text="Project Description" /></Column>
                    <Column><Text text="Company Code ID" /></Column>
                    <Column><Text text="Company Code Description" /></Column>
                    <Column><Text text="Valid From" /></Column>
                    <Column><Text text="Valid To" /></Column>
                    <Column><Text text="Location" /></Column>

                    <!-- Posting Parameters -->
                    <Column><Text text="Business Area" /></Column>
                    <Column><Text text="Profit Center" /></Column>
                    <Column><Text text="Functional Area" /></Column>

                    <!-- Supplementary Text -->
                    <Column><Text text="Supplementary Text" /></Column>

                    <Column><Text text="Actions" /></Column>
                </columns>

                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{projectId}" />
                            <Text text="{projectDescription}" />
                            <Text text="{companyCodeId}" />
                            <Text text="{companyCodeDescription}" />
                            <Text text="{validFrom}" />
                            <Text text="{validTo}" />
                            <Text text="{location}" />

                            <Text text="{businessArea}" />
                            <Text text="{profitCenter}" />
                            <Text text="{functionalArea}" />

                            <Text text="{supplementaryText}" />

                            <HBox>
                                <Button
                                    icon="sap-icon://information"
                                    tooltip="Details"
                                    press="onDetails"
                                />
                                <Button
                                    icon="sap-icon://edit"
                                    tooltip="Edit"
                                    press="onEditProject"
                                />
                                <Button
                                    icon="sap-icon://sys-add"
                                    tooltip="Add Building"
                                    press="onAddBuilding"
                                />
                                <Button
                                    icon="sap-icon://delete"
                                    type="Reject"
                                    tooltip="Delete"
                                    press="onDelete"
                                />
                            </HBox>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>
