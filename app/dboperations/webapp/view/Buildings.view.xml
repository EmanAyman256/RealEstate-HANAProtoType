<mvc:View
    controllerName="dboperations.controller.Buildings"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc">

    <Page id="BuildingsPage" title="Buildings">
        <headerContent>
            <Button
                id="btnAddBuildings"
                icon="sap-icon://add"
                tooltip="Add"
                text="New Building"
                press="onAddBuilding" />
        </headerContent>

        <content>
            <Table
                id="buildingsTable"
                items="{ path: '/Buildings' }"
                class="sapUiResponsiveContentPadding">

                <columns>
                    <!-- General Data -->
                    <Column><Text text="Building ID" /></Column>
                    <Column><Text text="Building Description" /></Column>
                    <Column><Text text="Building Old Code" /></Column>
                    <Column><Text text="Project ID" /></Column>
                    <Column><Text text="Project Description" /></Column>
                    <Column><Text text="Company Code ID" /></Column>
                    <Column><Text text="Company Code Description" /></Column>
                    <Column><Text text="Valid From" /></Column>
                    <Column><Text text="Valid To" /></Column>
                    <Column><Text text="Location" /></Column>

                    <!-- Posting Parameters -->
                    <Column><Text text="Business Area" /></Column>
                    <Column><Text text="Profit Center" /></Column>
                    <Column><Text text="Functional Area" /></Column>

                    <!-- Supplementary Text (optional, uncomment if exists) -->
                    <!-- <Column><Text text="Supplementary Text" /></Column> -->

                    <Column><Text text="Actions" /></Column>
                </columns>

                <items>
                    <ColumnListItem>
                        <cells>
                            <!-- General Data -->
                            <Text text="{buildingId}" />
                            <Text text="{buildingDescription}" />
                            <Text text="{buildingOldCode}" />
                            <Text text="{projectId}" />
                            <Text text="{projectDescription}" />
                            <Text text="{companyCodeId}" />
                            <Text text="{companyCodeDescription}" />
                            <Text text="{validFrom}" />
                            <Text text="{validTo}" />
                            <Text text="{location}" />

                            <!-- Posting Parameters -->
                            <Text text="{businessArea}" />
                            <Text text="{profitCenter}" />
                            <Text text="{functionalArea}" />

                            <!-- Supplementary Text (optional) -->
                            <!-- <Text text="{supplementaryText}" /> -->

                            <!-- Action Buttons -->
                            <HBox>
                                <Button
                                    icon="sap-icon://sys-add"
                                    tooltip="Add Unit"
                                    press="onAddUnit" />
                                <Button
                                    icon="sap-icon://information"
                                    tooltip="Details"
                                    press="onDetails" />
                                <Button
                                    icon="sap-icon://edit"
                                    tooltip="Edit"
                                    press="onEdit" />
                                <Button
                                    icon="sap-icon://delete"
                                    type="Reject"
                                    tooltip="Delete"
                                    press="onDelete" />
                            </HBox>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>
